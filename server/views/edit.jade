extends ./layout

block content

  .field
    form(action="/newsfeeds/edit/#{newsfeeds._id}?_method=PUT" method="POST")
      h1 title:
      input(type="text", name="title", value=newsfeeds.title)
      h1 author:
      input(type="text", name="author", value=newsfeeds.author)
      h1 body:
      input(type="text", name="body", value=newsfeeds.body)
      h1 Image Url:
      input(type="text", name="photoURL", value=newsfeeds.photoURL)
      button Save
      br
    form(action="/newsfeeds/#{newsfeeds._id}?_method=DELETE" method="POST")
      button Delete